<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="16dp"
    tools:ignore="HardcodedText,SmallSp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is 1 text view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="This is 2 text view"
        app:layout_constraintTop_toBottomOf="@id/textView1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="This is 3 text view"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="This is 4 text view"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <TextView
        android:id="@+id/textViewToHide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hide me"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4" />

    <ImageView
        android:id="@+id/imageViewToHide"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="@id/textViewToHide"
        app:layout_constraintStart_toEndOf="@id/textViewToHide"
        app:layout_constraintTop_toTopOf="@id/textViewToHide" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonToHide1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Button 1 to hide"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textViewToHide"
        app:layout_constraintEnd_toStartOf="@id/buttonToHide2"
        app:layout_constraintStart_toEndOf="@id/imageViewToHide" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonToHide2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Button 1 to hide"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/buttonToHide1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonToHide1" />

    <TextView
        android:id="@+id/hintToHide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint to hide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonToHide1" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="textViewToHide,buttonToHide2,buttonToHide1,hintToHide,imageViewToHide" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="This is 4 text view"
        app:layout_constraintTop_toBottomOf="@id/hintToHide" />

</androidx.constraintlayout.widget.ConstraintLayout>